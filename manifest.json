{
    "manifest_version": 3,
    "name": "Baselinker Offer Generator",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://*.baselinker.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
}

